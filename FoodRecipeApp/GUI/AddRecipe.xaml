<Page x:Class="FoodRecipeApp.GUI.AddRecipe"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FoodRecipeApp.GUI"
      mc:Ignorable="d" 
      d:DesignHeight="485"
      d:DesignWidth="1110"
      Title="Add Recipe"
      Style="{DynamicResource PageStyle}">

<!--chỉnh lại lề trái phải của khung bước làm + phân loại món ăn
    chỉnh màu sắc của mấy khung richtext + image + list view (khung nhập dữ liệu) -> chỉnh màu focus lại
    chỉnh style button
    
    -->
    <ScrollViewer Background="White" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" Padding="10,0,10,0" Margin="0,0,0,-7" >
        <StackPanel Height="2332">
            <CheckBox x:Name="IsLoveDishCheckBox" FontSize="20" FontWeight="Medium" Foreground="#332226" Margin="20,10,0,0" HorizontalAlignment="Stretch" Content="Món yêu thích" Padding="10" />

            <Border BorderBrush="#FFD80073" Margin="10,25,10,10" BorderThickness="1" Width="986" HorizontalAlignment="Center"/>

            <!-- khung chọn Main Image -->
            <Label Content="Ảnh thumnail" FontSize="25" FontWeight="Bold" Foreground="#332226" Margin="20,10,0,0" />
            <StackPanel Width="656" Margin="0,10,0,10" Height="326">
                <StackPanel Background="WhiteSmoke" Height="277" Margin="10,0,10,0">
                    <Image x:Name="DishImage" Height="279"/>
                </StackPanel>
                <Button x:Name="AddDishImageButton" Background="LightGray" HorizontalAlignment="Center" Content="Chọn ảnh" Margin="170,10,170,10" Padding="20,10,20,10" Width="161" />
            </StackPanel>

            <Border BorderBrush="#FFD80073" Margin="10,40,10,10" BorderThickness="1" Width="986" HorizontalAlignment="Center"/>

            <!-- khung mô tả món ăn-->
            <StackPanel Margin="0,20,0,20">
                <Label Content="Giới thiệu và nguyên liệu" FontSize="25" FontWeight="Bold" Foreground="#332226" Margin="20,10,0,0" />
                <RichTextBox Name="DescriptionDishRichTextBox" FontSize="20" FontWeight="Medium" Foreground="#332226" Margin="10" Width="994" Height="174" VerticalScrollBarVisibility="Visible"/>
            </StackPanel>

            <Border BorderBrush="#FFD80073" Margin="10,30,10,10" BorderThickness="1" Width="986" HorizontalAlignment="Center"/>

            <!-- khung chọn vIDEO -->
            <Label Content="Video hướng dẫn" FontSize="25" FontWeight="Bold" Foreground="#332226" Margin="20,10,0,0" />
            <StackPanel Width="650" Margin="0,20,0,20" Height="357" >
                <StackPanel Background="WhiteSmoke" Height="313" Margin="10,0,10,0">
                    <MediaElement x:Name="DishMedia" Height="311"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="44,10">
                    <TextBox x:Name="DishMediaTextBox" Text="Link to Video here" Width="570" HorizontalAlignment="Center" />
                </StackPanel>
            </StackPanel>

            <Border BorderBrush="#FFD80073" Margin="10,30,10,10" BorderThickness="1" Width="986" HorizontalAlignment="Center"/>

            <!--Các bước làm-->
            <Label Content="Các bước làm" FontSize="25" FontWeight="Bold" Foreground="#332226" Margin="20,10,0,0" />
            <StackPanel Margin="0,20,0,20" Height="312" Name="AddStepStackPanel">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="5*"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Name="StepNumberLabel" Content="Bước: " Foreground="#332226" FontWeight="Medium" FontSize="20"/>
                        <RichTextBox Grid.Row="1" Name="DescriptionStepRichTextBox" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10,10,10,10" Padding="10" Width="554" Height="174" VerticalScrollBarVisibility="Visible" FontSize="20" FontWeight="Medium" Foreground="#332226"/>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="5*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Content="Ảnh hướng dẫn" Foreground="#332226" FontWeight="Medium" FontSize="20"/>
                        <ListView Grid.Row ="1" Margin="0,10,0,10" >

                        </ListView>
                        <Button Content="Thêm ảnh minh họa" Name="AddStepImagesButton" Grid.Row="2" Margin="352,0,10,0"/>
                    </Grid>
                </Grid>
                <Button x:Name="AddStepButton" Background="LightGray" HorizontalAlignment="Center" Content=" Thêm bước" Margin="170,10,170,10" Padding="20,10,20,10" Width="161" />
            </StackPanel>

            <Border BorderBrush="#FFD80073" Margin="10" BorderThickness="1" Width="986" HorizontalAlignment="Center"/>

            <!--phân loại-->
            <StackPanel>
                <Label Content="Phân loại món ăn" FontSize="25" FontWeight="Bold" Foreground="#332226" Margin="20,10,0,0" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Loại món"/>
                    <CheckBox Grid.Column="1" HorizontalAlignment="Stretch" Content="Món chay"/>
                    <CheckBox Grid.Column="2" HorizontalAlignment="Stretch" Content="Món mặn"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Nguyên liệu chính"/>
                    <StackPanel Grid.Column="1">
                        <CheckBox HorizontalAlignment="Stretch" Content="Heo" Padding="10"/>
                        <CheckBox HorizontalAlignment="Stretch" Content="Bò" Padding="10" />
                        <CheckBox HorizontalAlignment="Stretch" Content="Hải sản" Padding="10"/>
                        <CheckBox HorizontalAlignment="Stretch" Content="Đồ ngọt" Padding="10"/>

                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <CheckBox HorizontalAlignment="Stretch" Content="Gà" Padding="10" />
                        <CheckBox HorizontalAlignment="Stretch" Content="Dê" Padding="10"/>
                        <CheckBox HorizontalAlignment="Stretch" Content="Khác" Padding="10"/>
                    </StackPanel>
                </Grid>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Content="Cách chế biến"/>
                    <StackPanel Grid.Column="1">
                        <CheckBox HorizontalAlignment="Stretch" Content="Chiên" Padding="10"/>
                        <CheckBox HorizontalAlignment="Stretch" Content="Nấu" Padding="10" />
                        <CheckBox HorizontalAlignment="Stretch" Content="Nướng" Padding="10"/>
                        <CheckBox HorizontalAlignment="Stretch" Content="Lên men" Padding="10"/>

                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <CheckBox HorizontalAlignment="Stretch" Content="Xào" Padding="10" />
                        <CheckBox HorizontalAlignment="Stretch" Content="Kho" Padding="10"/>
                        <CheckBox HorizontalAlignment="Stretch" Content="Hấp" Padding="10"/>
                        <CheckBox HorizontalAlignment="Stretch" Content="Khác" Padding="10"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <Border BorderBrush="#FFD80073" Margin="10,40,10,10" BorderThickness="1" Width="986" HorizontalAlignment="Center"/>

            <Grid Margin="0,30,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="AddDishButton" Content="Thêm món" Grid.Column="2" Height="45" Margin="10,0,10,0"/>
                <Button x:Name="CancelDishButton" Content="Hủy thêm" Grid.Column="1" Height="45" Margin="10,0,10,0"/>
            </Grid>

            <!--<StackPanel VerticalAlignment="Top" HorizontalAlignment="Left">
            <TextBlock TextWrapping="Wrap" Margin="0,0,0,20">Scrolling is enabled when it is necessary. 
                        Resize the window, making it larger and smaller.</TextBlock>
            <Rectangle Fill="Red" Width="50" Height="5000"></Rectangle>
        </StackPanel>-->
        </StackPanel>
    </ScrollViewer>
</Page>
