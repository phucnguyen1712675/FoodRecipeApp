	<mah:MetroWindow.RightWindowCommands>
		<mah:WindowCommands>
			<Button Click="ChangeAppStyleButtonClick">
				<StackPanel Orientation="Horizontal">
					<iconPacks:PackIconModern Width="24" Height="24" Kind="FoodCupcake" />
					<TextBlock Margin="4 0 0 0" VerticalAlignment="Center" Text="Change App Style..." />
				</StackPanel>
			</Button>
		</mah:WindowCommands>
	</mah:MetroWindow.RightWindowCommands>
	
	<!--Content-->
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="87*"/>
			<ColumnDefinition Width="430*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="83*"/>
			<RowDefinition Height="259*"/>
		</Grid.RowDefinitions>

		<TextBlock Grid.Column="1"
                   VerticalAlignment="Center"
                   Text="Food Recipe App"
                   FontWeight="Light"
                   Foreground="White"
                   FontSize="30"
                   FontFamily="Segoe UI" 
                   Margin="10,0,0,0"/>

		<WrapPanel Grid.Row="1" Grid.Column="1" Width="940" Height="382" HorizontalAlignment="Left" VerticalAlignment="Top">
			<mah:Tile Title="Mail" Style="{StaticResource LargeTileStyle}" Background="Teal" Margin="3" HorizontalTitleAlignment="Right">
				<iconPacks:PackIconModern Width="40"
				                          Height="40"
				                          Kind="Email"/>
			</mah:Tile>
			<mah:Tile Title="Desktop" Style="{StaticResource LargeTileStyle}" Background="DarkSalmon" Margin="3" HorizontalTitleAlignment="Right">
				<!--<mah:Tile.Background>
					<ImageBrush ImageSource="/Resources/recipe-book.ico"/>
				</mah:Tile.Background>-->
				<iconPacks:PackIconModern Width="40"
				                          Height="40"
				                          Kind="Email" />
			</mah:Tile>
			<mah:Tile Title="Desktop" Style="{StaticResource LargeTileStyle}" Background="Green" HorizontalTitleAlignment="Right">
				<iconPacks:PackIconModern Width="40"
				                          Height="40"
				                          Kind="Email" />
			</mah:Tile>
			<mah:Tile Title="Desktop" Style="{StaticResource LargeTileStyle}" Background="#D2691E" HorizontalTitleAlignment="Right">
				<iconPacks:PackIconModern Width="40"
				                          Height="40"
				                          Kind="Email" />
			</mah:Tile>
			<mah:Tile Title="Desktop" Style="{StaticResource LargeTileStyle}" Background="#1E90FF" HorizontalTitleAlignment="Right">
				<iconPacks:PackIconModern Width="40"
				                          Height="40"
				                          Kind="Email" />
			</mah:Tile>
			<mah:Tile Title="Desktop" Style="{StaticResource SmallTileStyle}" Background="DarkKhaki" HorizontalTitleAlignment="Right">
				<iconPacks:PackIconModern Width="40"
				                          Height="40"
				                          Kind="Email" />
			</mah:Tile>
			<mah:Tile Title="Desktop" Style="{StaticResource SmallTileStyle}" Background="DarkGoldenrod" HorizontalTitleAlignment="Right">
				<iconPacks:PackIconModern Width="40"
				                          Height="40"
				                          Kind="Email" />
			</mah:Tile>
		</WrapPanel>
	</Grid>
