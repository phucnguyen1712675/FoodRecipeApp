	<!--Content-->
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="87*"/>
			<ColumnDefinition Width="430*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="83*"/>
			<RowDefinition Height="259*"/>
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" Grid.Column="1"
		           VerticalAlignment="Center"
		           Text="Food Recipe App"
		           Foreground="White"
		           FontSize="30"
		           FontFamily="Segoe UI Light" 
		           Margin="10,0,0,0"/>

		<WrapPanel Grid.Row="1" Grid.Column="1" Width="920" Height="382" HorizontalAlignment="Left" VerticalAlignment="Top">
			<mah:Tile Title="Mail" Style="{StaticResource LargeTileStyle}" Background="Teal" Margin="3" HorizontalTitleAlignment="Right">
				<iconPacks:PackIconModern Width="40"
				                          Height="40"
				                          Kind="Email"/>
			</mah:Tile>
			<mah:Tile Title="Desktop" Style="{StaticResource LargeTileStyle}" Background="Green" Margin="3" HorizontalTitleAlignment="Right">
				<iconPacks:PackIconModern Width="40"
				                          Height="40"
				                          Kind="Email" />
			</mah:Tile>
			<mah:Tile Title="Desktop" Style="{StaticResource LargeTileStyle}" Background="DarkSalmon" HorizontalTitleAlignment="Right">
				<iconPacks:PackIconModern Width="40"
				                          Height="40"
				                          Kind="Email" />
			</mah:Tile>
			<mah:Tile Title="Desktop" Style="{StaticResource LargeTileStyle}" Background="#D2691E" HorizontalTitleAlignment="Right">
				<iconPacks:PackIconModern Width="40"
				                          Height="40"
				                          Kind="Email" />
			</mah:Tile>
			<mah:Tile Title="Desktop" Style="{StaticResource LargeTileStyle}" Background="#1E90FF" HorizontalTitleAlignment="Right">
				<iconPacks:PackIconModern Width="40"
				                          Height="40"
				                          Kind="Email" />
			</mah:Tile>
			<mah:Tile Title="Desktop" Style="{StaticResource SmallTileStyle}" Background="DarkKhaki" HorizontalTitleAlignment="Right">
				<iconPacks:PackIconModern Width="40"
				                          Height="40"
				                          Kind="Email" />
			</mah:Tile>
			<mah:Tile Title="Desktop" Style="{StaticResource SmallTileStyle}" Background="DarkGoldenrod" HorizontalTitleAlignment="Right">
				<iconPacks:PackIconModern Width="40"
				                          Height="40"
				                          Kind="Email" />
			</mah:Tile>
		</WrapPanel>
	</Grid>
