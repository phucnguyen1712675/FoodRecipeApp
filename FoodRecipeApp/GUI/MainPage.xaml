		           Text="Frame Navigation" />
	</StackPanel>-->
	<!--Content-->
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="87*"/>
			<ColumnDefinition Width="430*"/>
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="83*"/>
			<RowDefinition Height="259*"/>
		</Grid.RowDefinitions>

		<TextBlock Grid.Row="0" Grid.Column="1"
		           VerticalAlignment="Center"
		           Text="Food Recipe App"
		           Foreground="White"
		           FontSize="30"
		           FontFamily="Segoe UI Light" 
		           Margin="10,0,0,0"/>

		<ListView Grid.Row="1" Grid.Column="1" Name="DataListView" 
		          ScrollViewer.HorizontalScrollBarVisibility="Disabled">
			<ListView.ItemsPanel>
				<ItemsPanelTemplate>
					<!--<foodRecipeApp:VirtualizingWrapPanel Orientation="Horizontal"/>-->
					<WrapPanel />
				</ItemsPanelTemplate>
			</ListView.ItemsPanel>
			<ListView.ItemTemplate>
				<DataTemplate>
					<mah:Tile Title="{Binding Tittle}" 
					          Style="{StaticResource LargeTileStyle}" 
					          Margin="3" 
							  TitleFontSize="20"
							  
					          HorizontalTitleAlignment="Left"
					          mah:ControlsHelper.MouseOverBorderBrush="{DynamicResource MahApps.Brushes.ThemeForeground}"
					          Click="ButtonBase_OnClick">
						<mah:Tile.Background>
							<ImageBrush ImageSource="{Binding ImageSource}" />
						</mah:Tile.Background>
						<!--<iconPacks:PackIconModern Width="40"
						                          Height="40"
						                          Kind="{Binding Kind}"/>-->
					</mah:Tile>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</Grid>
</Page>