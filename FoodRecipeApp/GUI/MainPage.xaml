<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
      xmlns:local="clr-namespace:FoodRecipeApp"
      xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
      x:Class="FoodRecipeApp.GUI.MainPage"
      Title="Home Screen"
      d:DesignHeight="485"
      d:DesignWidth="920"
      Style="{DynamicResource PageStyle}"
      mc:Ignorable="d">

	<Page.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/FoodRecipeApp;component/RecipeResources.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</Page.Resources>

	<Grid x:Name="LayoutRoot"
		HorizontalAlignment="Stretch"
		VerticalAlignment="Stretch">

		<Grid.RowDefinitions>
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<telerik:RadTileList Grid.Row="0"
						     x:Name="radTileList"
							 ItemsSource="{Binding PagedSource, ElementName=radDataPager1}"
							 ItemTemplate="{DynamicResource TileListItemTemplate}"
							 ScrollViewer.HorizontalScrollBarVisibility="Auto"
							 >

			<telerik:RadTileList.PanoramaBackground>
				<Image Source="/Resources/panoramic-view-sea.jpg" 
					   Stretch="UniformToFill"/>
			</telerik:RadTileList.PanoramaBackground>

		</telerik:RadTileList>

		<telerik:RadDataPager Grid.Row="1"
							  x:Name="radDataPager1" 
							  PageSize="6" 
							  FontSize="14" 
							  DisplayMode="PreviousNext, Text"
							  BorderThickness="1,0,1,1"
							  Margin="0,10,0,0"
							  Source="{Binding Recipes, Source={StaticResource MyRecipeViewModel}}"
							  IsTotalItemCountFixed="True" 
							  />
	</Grid>
</Page>