		<mah:WindowCommands>
			<Button Click="DeployCupCakes" Content="Deploy CupCakes">
				<Button.ContentTemplate>
					<DataTemplate>
						<StackPanel Orientation="Horizontal">
							<iconPacks:PackIconModern Width="22"
							                          Height="22"
							                          VerticalAlignment="Center"
							                          Kind="FoodCupcake" />
