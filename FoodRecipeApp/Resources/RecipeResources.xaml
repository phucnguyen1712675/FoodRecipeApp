                                <Border Margin="20,10,20,10" Padding="15" Grid.Row="0" BorderThickness="0,0,0,2" BorderBrush="#FFD80073">
                                    <TextBlock x:Name="DishMeidaTextBlock"  TextWrapping="Wrap" TextAlignment="Justify" 
