                                <!--<WebBrowser x:Name="DishMedia" Resources="{Binding Video, Converter={StaticResource MediaDishconverter}}"  Margin="20" Height="400" Width="650" Grid.Row="1" />-->
                                <WebBrowser src:WebBrowserUtility.BindableSource="{Binding Video,Converter={StaticResource MediaDishconverter}}" Grid.Row="1" />

                            </Grid>
                        </Border>

                        <!--Xem hướng dẫn cụ thể các bước làm-->

                    </StackPanel>
